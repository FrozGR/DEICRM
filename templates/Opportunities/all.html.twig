{% extends 'base.html.twig' %}

{% block title %}DEICRM{% endblock %}

{% block body %}


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="../">Home</a></li>
    <li class="breadcrumb-item"><a href="../accounts">Accounts</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="../opportunities">opportunities</a></li>
      <li class="breadcrumb-item active" aria-current="page"><a href="../opportunities">opportunities</a></li>
          <li class="breadcrumb-item active" aria-current="page"><a href="../leads">Leads</a></li>
  </ol>
</nav>

{% include 'Opportunities/inc/flash.html.twig' %}

{% include 'opportunities/inc/breadcrumb.html.twig' %}




{% if opportunities is defined %}

<div class="card">
  <div class="card-header">
    All opportunitiess
  </div>
  <ul class="list-group list-group-flush">
    {% for data in opportunities %}
    <li class="list-group-item">{{ data.opportunityName}} {{ data.opportunityAmount}} {{ data.AccountName}} <a href="../opportunities/{{ data.id }}" class="btn btn-primary btn-sm">view</a> <a href="../opportunities/edit/{{ data.id }}" class="btn btn-primary btn-sm">edit</a>
      <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#deleteModal">remove
</button></li>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLongTitle">Remove {{ data.opportunityName}} </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to remove this opportunities ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <a href="{{ path('delopportunities', {'id': data.id} ) }}" class="btn btn-primary">Yes</a>
      </div>
    </div>
  </div>
</div>
    {% endfor %}
  </ul>
</div>




{% endif %}

{% endblock %}
