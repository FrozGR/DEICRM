{% extends 'base.html.twig' %}

{% block title %}DEICRM{% endblock %}

{% block body %}


{% include 'inc/breadcrumb.html.twig' %}

{% include 'target/inc/flash.html.twig' %}

{% include 'target/inc/breadcrumb.html.twig' %}


{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

{% if form is defined %}


    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endif %}


{% if target is defined %}

<div class="card">
  <div class="card-header">
  Search For {{target}}
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Date Created</th>
        <th scope="col">Date Modified</th>
        <th scope="col">Created By</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>

    {% for data in target %}

    <tr>
      <th scope="row">{{ data.Id}}</th>
      <td>{{ data.Title}}</td>
        <td>{{ data.FirstName}}</td>
      <td>{{ data.LastName}}</td>
      <td>{{ data.DateCreated}}</td>
      <td>{{ data.DateModified}}</td>
      <td>{{ data.CreatedBy}}</td>
      <td> <a href="/target/{{ data.id }}" class="btn btn-primary btn-sm">view</a>

</td>
    </tr>



    {% endfor %}
  </tbody>
  </table>
</div>



{% endif %}

{% block javascripts %}
    {{ parent() }}



{% endblock %}
{% endblock %}
