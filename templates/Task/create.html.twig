{% extends 'base.html.twig' %}

{% block title %}DEICRM{% endblock %}

{% block body %}


{% include 'contact/inc/flash.html.twig' %}

{% include 'contact/inc/breadcrumb.html.twig' %}




{% if form is defined %}


    {{ form_start(form) }}
    <div class="row">
      <div class="col">
        {{ form_row(form.Subject) }}
      </div>
     <div class="col">
       {{ form_row(form.Status) }}
     </div>
   </div>


   <div class="row">
    <div class="col">
      {{ form_row(form.StartDate) }}
    </div>
    <div class="col">
         {{ form_row(form.DueDate) }}
    </div>
  </div>



<div class="row">
  <div class="col-4">
    {{ form_row(form.Priority) }}
  </div>
 <div class="col-4">
   {{ form_row(form.RelatedToType) }}
 </div>
 <div class="col-4">
   {{ form_row(form.RelatedTo) }}
 </div>
</div>


    {{ form_row(form.ContactName) }}



   {{ form_row(form.Description) }}

   {{ form_row(form.AssignedTo) }}



    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endif %}






{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datepicker') }}
    <script>
    $(document).ready(function() {

      $('.js-datepicker1').datepicker({
      format: 'yyyy-MM-dd',
        setDate: new Date(),
        startDate:new Date(),
        autoclose: true

      });
    $('.js-datepicker1').datepicker('setDate', 'now');


    $('.js-datepicker2').datepicker({
    format: 'yyyy-MM-dd',
      setDate: new Date(),
      startDate:new Date(),
      autoclose: true

    });
    $('.js-datepicker2').datepicker('setDate', 'now');



    });
    </script>
{% endblock %}

{% endblock %}
